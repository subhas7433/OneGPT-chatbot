<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/window_background"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_bg"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Early access"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@drawable/custom_btn"
            android:backgroundTint="@color/primary_light"
            android:layout_marginHorizontal="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="4dp"
            android:paddingHorizontal="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:text="Keep in Mind"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="6dp"
            android:textColor="@color/primary_txt_color"
            android:text="● It may produce.. because it's beta version"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="6dp"
            android:textColor="@color/primary_txt_color"
            android:text="● To know about a new topic, Start a new Chat. Else AffixAI will generate wrong info"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="6dp"
            android:textColor="@color/primary_txt_color"
            android:text="● Create a new Chat to avoid dated data."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="6dp"
            android:textColor="@color/primary_txt_color"
            android:text="● Some time it can produce wrong data because it is in development mode."/>
        <Button
            android:id="@+id/goForOverLayPermission"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:text="GOT it"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:paddingVertical="0dp"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="13.5sp"
            android:stateListAnimator="@null"
            app:cornerRadius="@dimen/btn_radious"
            />
    </LinearLayout>

</LinearLayout>