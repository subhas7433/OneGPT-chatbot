<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/window_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            android:background="@drawable/custom_bottom_dialog_bg"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_bottom_dialog_bg">

                        <LinearLayout
                            android:id="@+id/readReply"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="gone"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/readReplyImg"
                                    android:layout_width="@dimen/tools_dialog_img_size"
                                    android:layout_height="@dimen/tools_dialog_img_size"
                                    android:background="@drawable/custom_btn"
                                    android:padding="12dp"
                                    android:src="@drawable/speaker_icon"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/readReplyTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Hear it"
                                    android:textSize="@dimen/dialog_sub_txt_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/replyCopy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/tools_dialog_img_size"
                                    android:layout_height="@dimen/tools_dialog_img_size"
                                    android:background="@drawable/custom_btn"
                                    android:padding="12dp"
                                    android:src="@drawable/copy_icon"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/replyCopyTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Copy"
                                    android:textSize="@dimen/dialog_sub_txt_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/waShare"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="gone"
                            android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/tools_dialog_img_size"
                                    android:layout_height="@dimen/tools_dialog_img_size"
                                    android:background="@drawable/custom_btn"
                                    android:padding="11dp"
                                    android:src="@drawable/whatsapp_icon"
                                    app:tint="@color/white" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="WhatsApp"
                                    android:textSize="@dimen/dialog_sub_txt_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/replyShare"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/tools_dialog_img_size"
                                    android:layout_height="@dimen/tools_dialog_img_size"
                                    android:background="@drawable/custom_btn"
                                    android:padding="12dp"
                                    android:src="@drawable/share_icon"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/replyShareTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Share"
                                    android:textSize="@dimen/dialog_sub_txt_size" />
                        </LinearLayout>
                </LinearLayout>


        </LinearLayout>
</LinearLayout>