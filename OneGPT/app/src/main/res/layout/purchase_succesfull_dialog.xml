<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_dialog_bg"
    android:gravity="center"
    android:minWidth="@dimen/dialog_with"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="280dp"
        android:layout_height="240dp"
        app:lottie_autoPlay="true"
        android:layout_marginVertical="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        app:lottie_cacheComposition="true"
        app:lottie_loop="true"
        app:lottie_speed="1"
        app:lottie_rawRes="@raw/successful"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14.5sp"
        android:layout_marginHorizontal="5dp"
        android:paddingVertical="10dp"
        android:textAlignment="center"
        android:textColor="@color/mid_black"
        android:text="Your purchase request has been successful. Restart the app for best effect."/>


    <Button
        android:id="@+id/restart"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:stateListAnimator="@null"
        android:paddingVertical="12dp"
        android:textColor="@color/mid_black"
        android:backgroundTint="@color/btnLight"
        app:cornerRadius="@dimen/btn_radious"
        android:text="Restart"
        android:textSize="14sp"
        />


</LinearLayout>