<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/historyRowLA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="340dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="12dp"
        android:padding="12dp"
        android:orientation="vertical"
        android:backgroundTint="@color/table_bg"
        android:background="@drawable/custom_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GPT-3.5-turbo"
                style="@style/TextView.black"
                android:textAllCaps="true"
                android:paddingVertical="3dp"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:29pm 18/04/23"
                android:textColor="@color/gray"
                android:visibility="gone"
                android:textSize="8sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginVertical="4dp"
            android:maxLines="2"
            android:textColor="@color/primary_txt_color"
            style="@style/TextView"
            android:text="What is Jems webb telescope ?"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn"
                android:backgroundTint="#4DE3E3E3"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="See full conversation"
                android:textColor="@color/mid_black"
                android:textSize="9sp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:padding="5dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="#4DE3E3E3"
                android:src="@drawable/delete_icon"
                app:tint="@color/mid_black"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>