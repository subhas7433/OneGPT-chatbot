<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userMsgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:background="@color/web_send_msg_color"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/userChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_txt_size"
                android:layout_marginTop="2dp"
                android:textColor="@color/primary_txt_color"
                android:text="@string/damy_txt"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/typingAnniAuto"
                android:layout_width="75dp"
                android:layout_height="40dp"
                app:lottie_autoPlay="true"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_marginVertical="3dp"
                android:scaleType="centerCrop"
                app:lottie_cacheComposition="true"
                app:lottie_loop="true"
                app:lottie_speed="1"
                app:lottie_colorFilter="@color/black"
                app:lottie_rawRes="@raw/chat_loading"
                android:backgroundTint="@color/dark_gray"
                android:background="@drawable/custom_receive_msg" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/questionCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/copy_icon"
                android:drawableTint="@color/dark_gray"
                android:drawablePadding="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:layout_marginStart="3dp"
                android:text=""
                android:textColor="@color/iconSendColor"
                android:textSize="@dimen/mini_txt_size" />
            <TextView
                android:id="@+id/questionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingVertical="4dp"
                android:layout_weight="1"
                android:text="12:15pm"
                android:visibility="gone"
                android:textAlignment="textEnd"
                android:textColor="@color/iconSendColor"
                android:textSize="8sp"
                tools:ignore="NestedWeights,RtlCompat" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_bg"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aiAnsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:visibility="visible"
            android:background="@color/web_receive_msg_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/aiShowText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingHorizontal="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-4dp"
                    android:text="AffixAI"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <TextSwitcher
                    android:id="@+id/textSwitcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inAnimation="@android:anim/fade_in"
                    android:outAnimation="@android:anim/fade_out"
                    android:paddingHorizontal="15dp"
                    android:minWidth="120dp"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/replyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="12dp"
                    android:text="@string/damy_txt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_txt_size" />

                <TextView
                    android:id="@+id/seeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:minWidth="120dp"
                    android:textSize="@dimen/normal_txt_size"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:textColor="@color/mid_black"
                    android:text="Read more"/>

                <LinearLayout
                    android:id="@+id/toolLayout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/timeOfReplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        android:paddingVertical="4dp"
                        android:visibility="gone"
                        android:text="12:15pm"
                        android:textAlignment="textStart"
                        android:textColor="@color/iconSendColor"
                        android:textSize="8sp"
                        tools:ignore="NestedWeights" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/speak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/speaker_icon"
                        android:layout_marginTop="1.5dp"
                        app:tint="@color/iconSendColor"
                        android:drawablePadding="5dp"
                        android:paddingHorizontal="6dp"
                        android:paddingTop="6dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/iconSendColor"
                        android:textSize="@dimen/mini_txt_size"
                        />
                    <TextView
                        android:id="@+id/replyCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/iconSendColor"
                        android:drawableStart="@drawable/copy_icon"
                        android:drawablePadding="5dp"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="4dp"
                        android:text=""
                        android:textColor="@color/iconSendColor"
                        android:textSize="@dimen/mini_txt_size" />
                    <TextView
                        android:id="@+id/replyShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/iconSendColor"
                        android:drawableStart="@drawable/share_icon"
                        android:drawablePadding="5dp"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="4dp"
                        android:text=""
                        android:textColor="@color/iconSendColor"
                        android:textSize="@dimen/mini_txt_size" />
                    <TextView
                        android:id="@+id/shortIt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:visibility="gone"
                        android:drawableStart="@drawable/ic_window"
                        android:drawableTint="@color/iconSendColor"
                        android:drawablePadding="5dp"
                        android:paddingHorizontal="6dp"
                        android:layout_gravity="end"
                        android:text=""
                        android:textColor="@color/iconSendColor"
                        android:textSize="@dimen/mini_txt_size"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/waitingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/waitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:text="Analyzing the results"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/normal_txt_size"
                    android:visibility="visible" />
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/anni"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    app:lottie_autoPlay="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginVertical="3dp"
                    android:scaleType="centerCrop"
                    app:lottie_cacheComposition="true"
                    app:lottie_loop="true"
                    app:lottie_speed="1"
                    android:visibility="visible"
                    app:lottie_colorFilter="@color/white"
                    app:lottie_rawRes="@raw/anylizing_load"
                    android:background="@color/transparent" />
            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/typingAnni"
                android:layout_width="65dp"
                android:layout_height="35dp"
                app:lottie_autoPlay="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="3dp"
                android:scaleType="centerCrop"
                app:lottie_cacheComposition="true"
                app:lottie_loop="true"
                android:visibility="gone"
                app:lottie_speed="1"
                app:lottie_colorFilter="@color/black"
                app:lottie_rawRes="@raw/chat_loading"
                android:background="@color/transparent" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>